    <website>http://thereza.herokuapp.com</website>
    <email>rejaulcuet88@gmail.com</email>
    <license>GPL v2.0</license>
    <assets>
        <icon>icon.png</icon>
        <fanart>fanart.jpg</fanart>
        <screenshot>resources/1.jpg</screenshot>
        <screenshot>resources/2.png</screenshot>
        <screenshot>resources/3.jpeg</screenshot>
